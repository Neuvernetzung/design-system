{
  "extends": "tsconfig/react-library.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*ts",
    "src/**/*tsx",
    "src/utils/createCSSSelector.js"
  ],
  "exclude": [
    "dist",
    "alt",
    "node_modules",
    "**/**.stories.**",
    "commitlint.config.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "declaration": true,
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
