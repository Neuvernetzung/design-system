{
  "extends": "tsconfig/react-library.json",
  "include": ["**/*.ts", "**/*.tsx", "src/**/*ts", "src/**/*tsx"],
  "exclude": [
    "dist",
    "alt",
    "node_modules",
    "**/**.stories.**",
    "commitlint.config.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
