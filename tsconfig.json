{
  "extends": "@neuvernetzung/tsconfig/react-library.json",
  "include": ["**/*.ts", "**/*.tsx", "./src/**/*ts", "./src/**/*tsx"],
  "exclude": ["dist", "alt", "node_modules", "commitlint.config.ts"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2015"],
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
