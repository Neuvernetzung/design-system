{
  "extends": "@tsconfig/next/tsconfig.json",
  "include": ["./**/*.ts", "./**/*.tsx", "./src/**/*ts", "./src/**/*tsx"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "incremental": false
  }
}
