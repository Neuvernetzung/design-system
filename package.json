{
  "name": "@neuvernetzung/design-system",
  "version": "1.0.0-pre-1.2",
  "main": "dist/index.js",
  "private": false,
  "resolutions": {
    "webpack": "^5"
  },
  "scripts": {
    "lint": "eslint ./ --fix",
    "test": "test-storybook",
    "dev": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && cp package.json README.md ./dist",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@headlessui/tailwindcss": "^0.1.1",
    "@heroicons/react": "^2.0.12",
    "@popperjs/core": "^2.11.6",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@types/uuid": "^8.3.4",
    "classnames": "^2.3.2",
    "framer-motion": "^7.6.4",
    "lodash": "^4.17.21",
    "next": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.39.0",
    "react-merge-refs": "^2.0.1",
    "react-polymorphic-types": "^2.0.0",
    "react-popper": "^2.3.0",
    "swiper": "^8.4.4",
    "uuid": "^9.0.0",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/test-runner": "^0.9.0",
    "@storybook/testing-library": "^0.0.13",
    "@types/node": "18.11.9",
    "@types/react": "^18.0.24",
    "autoprefixer": "^10.4.13",
    "axe-playwright": "^1.1.11",
    "eslint": "^8.26.0",
    "eslint-config-custom": "github:Neuvernetzung/eslint-config-custom#semver:^0.0.3",
    "eslint-plugin-storybook": "^0.6.7",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-node": "^29.2.2",
    "postcss": "^8.4.18",
    "semantic-release": "^19.0.5",
    "storybook-css-modules-preset": "^1.1.1",
    "tailwindcss": "^3.2.1",
    "tsconfig": "github:Neuvernetzung/tsconfig",
    "typescript": "4.8.4",
    "webpack": "^5.74.0"
  },
  "pkgRoot": "dist",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/github",
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "dist"
      }
    ],
    "@semantic-release/git"
  ],
  "release": {
    "branches": [
      "master",
      {
        "name": "pre-*",
        "prerelease": true
      }
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neuvernetzung/design-system.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
